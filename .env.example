# Configurazione ambiente
ENVIRONMENT=development
DEBUG=True

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/compliance_compass

# JWT
JWT_SECRET_KEY=replace_with_secure_secret_key_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:8000

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200

# Email
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@compliancecompass.example.com

# Frontend URL (per link in email)
FRONTEND_URL=http://localhost:3000

# reCAPTCHA
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# AI API per Chatbot
AI_API_KEY=your_openai_api_key

# Configurazione produzione
# DB_PASSWORD=secure_database_password
# AI_API_KEY=your_openai_api_key